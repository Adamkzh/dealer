<form class="form-horizontal mt-5" id="dealerRegisterForm" action='/register-dealer' method="POST">
    <fieldset>
        <div class="form-group">
            <!-- LastName -->
            <label class="control-label"  for="dealerName">Dealer Name:</label>
            <input type="text" name="dealerName"
                   placeholder="" class="form-control" required>
            <small class="form-text text-muted">Dealer Name cannot be empty.</small>
        </div>

        <div class="form-group">
            <!-- FirstName -->
            <label class="control-label" for="userName">User Name:</label>
            <input type="text" name="userName" placeholder="" class="form-control" required>
            <small class="form-text text-muted">User Name cannot be empty.</small>
        </div>

        <div class="form-group">
            <!-- Password-->
            <label class="control-label" for="password">Password:</label>
            <input type="password" id="dealerPwd" name="password"
                   placeholder="" class="form-control" minlength=6 required>
            <small class="form-text text-muted">Password must contain at least 6 characters.</small>
        </div>

        <div class="form-group">
            <!-- Password -->
            <label class="control-label"  for="password_confirm">Password (Confirm):</label>
            <input type="password" id="dealerPwdConfirm" name="userPwdConfirm"
                   placeholder="" class="form-control" minlength=6 maxlength=12 required>
        </div>
        <button class="btn dm-btn-success">Register </button>
        <br>
        <br>
        <p>Create and you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>
    </fieldset>
</form>