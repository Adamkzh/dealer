<!DOCTYPE html>
<html>
<head>
    <% include ./meta-resources.ejs %>
</head>

<body class="light-text-color">
<% include ./body-nav.ejs %>
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-3">
            <img src="/images/default-avatar.png">
        </div>
        <div class="col-lg-9">
            <div>
                <h3>User Name</h3>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div id="profileTabs">
        <ul>
            <li><a href="#tabs-rst-list">Posted Cars</a></li>
            <li><a href="#tabs-followers">Involved Transactions</a></li>
        </ul>
        <div id="tabs-rst-list">
            <h3>Posted Cars</h3>
            <table class="table1">
                <tr>
                    <th>Car ID</th>
                    <th>Manufacture</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Price</th>
                    <th></th>
                </tr>
                <% postedCars.forEach(function(car) { %>
                    <tr>
                        <td><%= car.CarID %></td>
                        <td><%= car.Manufacture %></td>
                        <td><%= car.Year %></td>
                        <td><%= car.Price %></td>
                        <td><a id="editPostButton" class="dm-home-login-form-btn dm-btn-blue btn btn-primary mt-5"
                               href="/edit">Edit / Delete</a></td>
                    </tr>
                <% });%>
            </table>
        </div>
        <div id="tabs-followers">
            <h3>Transactions In Progress</h3>
            <table class="table1">
                <tr>
                    <th>Car ID</th>
                    <th>Manufacture</th>
                    <th>Model and Year</th>
                    <th></th>
                </tr>
                <tr>
                    <td>10</td>
                    <td>Hartebeest</td>
                    <td>Regal 1998</td>
                    <td><a id="editPostButton" class="dm-home-login-form-btn dm-btn-blue btn btn-primary mt-5"href="/edit">Status</a></td>
                </tr>
                <tr>
                    <td>11</td>
                    <td>Slender loris</td>
                    <td>RX-8 1999</td>
                    <td><a id="editPostButton" class="dm-home-login-form-btn dm-btn-blue btn btn-primary mt-5"href="/edit">Status</a></td>
                </tr>
                <tr>
                    <td>12</td>
                    <td>Audi</td>
                    <td>A7 2015</td>
                    <td><a id="editPostButton" class="dm-home-login-form-btn dm-btn-blue btn btn-primary mt-5"href="/edit">Status</a></td>
                </tr>
                <tr>
                    <td>13</td>
                    <td>Benz</td>
                    <td>G-Class 2005</td>
                    <td><a id="editPostButton" class="dm-home-login-form-btn dm-btn-blue btn btn-primary mt-5"href="/edit">Status</a></td>
                </tr>
                <tr>
                    <td>14</td>
                    <td>BMW</td>
                    <td>328i 1998</td>
                    <td><a id="editPostButton" class="dm-home-login-form-btn dm-btn-blue btn btn-primary mt-5"href="/edit">Status</a></td>
                </tr>
            </table>
        </div>

    </div>
</div>

<!-- libraries -->
<% include ./lib-url.ejs %>

<script type="text/javascript" src="/scripts/pg-profile.js"></script>
