<form class="form-horizontal mt-5" id="individualRegisterForm" action='/register-individual' method="POST">
    <fieldset>
        <div class="form-group">
            <!-- FirstName -->
            <label class="control-label" for="firstName">First Name:</label>
            <input type="text" name="firstName" placeholder="" class="form-control" required>
            <small class="form-text text-muted">First Name cannot be empty.</small>
        </div>

        <div class="form-group">
            <!-- LastName -->
            <label class="control-label"  for="lastName">Last Name:</label>
            <input type="text" name="lastName" placeholder="" class="form-control" required >
            <small class="form-text text-muted">Last Name cannot be empty.</small>
        </div>

        <div class="form-group">
            <!-- Password-->
            <label class="control-label" for="password">Password:</label>
            <input type="password" id="individualPwd" name="password"
                   placeholder="" class="form-control" minlength=6 required>
            <small class="form-text text-muted">Password must contain at least 6 characters.</small>
        </div>

        <div class="form-group">
            <!-- Password -->
            <label class="control-label"  for="password_confirm">Password (Confirm):</label>
            <input type="password" id="individualPwdConfirm" name="userPwdConfirm"
                   placeholder="" class="form-control" minlength=6 required>
        </div>
        <button class="btn dm-btn-success">Register </button>
        <br>
        <br>
        <p>Create and you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>
    </fieldset>
</form>